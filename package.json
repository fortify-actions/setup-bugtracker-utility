{
  "name": "setup-bugtracker-utility",
  "version": "1.0.0",
  "description": "GitHub Action for setting up Fortify Bug Tracker Utility",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build src/main.ts",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write **/*.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run build && git add dist/"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fortify-actions/setup-bugtracker-utility.git"
  },
  "keywords": [
    "Fortify",
    "FoD",
    "security"
  ],
  "author": "Ruud Senden",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fortify-actions/setup-bugtracker-utility/issues"
  },
  "homepage": "https://github.com/fortify-actions/setup-bugtracker-utility#readme",
  "dependencies": {
    "@actions/core": "^1.2.6",
    "@actions/tool-cache": "^1.6.1",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "@types/node": "^14.14.33",
    "@vercel/ncc": "^0.27.0",
    "eslint": "^7.21.0",
    "husky": "^4.3.8",
    "prettier": "^2.2.1",
    "typescript": "^4.2.3"
  }
}
